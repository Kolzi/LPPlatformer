<Archetype name="Player">
	<Components>
		<Position x="0" y="0" z="0" />
		<Sprite file="player2.png" frameWidth="38" loopTime="0.5"/>
		<Viewport x="0" y="0" w="max" h="max" />
		<CameraSource offsetX="100" offsetY="100" offsetZ="0" w="max" h="max" />
		<Physics acceleration="300" stoppingSpeed="500" maxSpeed="700"/>
		<BoundingBox x="0" y="0" w="38" h="61" />
		<Gravity g="100"/>
		<StandsOn jumpingPower="300" jumpingTime="0.3"/>
		<HasScore scoreEID="1" />
		<Countdown time="3">
			<AddToSystem target="PlayerInput" time="0"/>
		</Countdown>
	</Components>
	<Systems>
		<Render />
		<Collision />
		<Movement />
		<Gravity />
		<Camera />
		<Countdown />
	</Systems>
</Archetype>

